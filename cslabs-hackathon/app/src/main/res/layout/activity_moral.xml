<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3BF8F">

    <ImageView
        android:id="@+id/next_step"
        android:layout_width="43dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_blue_right"
        app:layout_constraintBottom_toBottomOf="@+id/moral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/moral"
        app:layout_constraintTop_toTopOf="@+id/moral">

    </ImageView>

    <ImageView
        android:id="@+id/moral"
        android:layout_width="297dp"
        android:layout_height="465dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_button"
        android:text="Recommencer"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moral" />

</androidx.constraintlayout.widget.ConstraintLayout>